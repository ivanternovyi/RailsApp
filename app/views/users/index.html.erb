<h1 class="alignCenter">Users</h1>

<% if @users.empty? %>

    <p> No users</p>

<% else %>

<table class="tableView">

    <tr>
        <th>Id:</th>
        <th>Login:</th>
    </tr>

    <% @users.each do |i| %>

    <tr>
        <td><%= i.id %></td>
        <td><%= link_to i.login, user_path(i) %></td>
    </tr>
    <% end %>
</table>
<% end %>
<h2 class="alignCenter"><%= link_to "Go to Items", items_path%></h2>
