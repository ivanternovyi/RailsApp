<h1 class="alignCenter">User Info:</h1>
<div class="userInfo">
    <h2>Login: <%= @user.login %></h2>
    <h2>Password:
    <% @user.password.length.times do %>
      <a>*</a>
    <% end %>
    </h2>
    <div class="remDivUser">
      <p class="alignCenter">
      Press button to delete user <br/>
      <% i = @user.id %>
      <%= link_to "Delete", user_path(i), method: :delete, data: { confirm: "Are you want to delete?"} %>
      </p>
    </div>
</div>
